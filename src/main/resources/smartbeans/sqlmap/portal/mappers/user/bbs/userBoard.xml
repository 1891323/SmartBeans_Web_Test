<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="smartbeans.portal.user.notice.mapper.UserNoticeMapper">
    <!-- 목록 조회 -->
    <resultMap id="UserNoticeList" type="smartbeans.portal.user.notice.service.UserNoticeVO">
        <result property="rowNum" column="rownum"/>
        <result property="noticeBoardNo" column="notice_board_no"/>
        <result property="noticeBoardSubType" column="notice_board_sub_type"/>
        <result property="noticeLastUpdtDtm" column="notice_last_updt_dtm"/>
        <result property="noticeFirstRegistDtm" column="notice_first_regist_dtm"/>
        <result property="noticeViewCount" column="notice_view_count"/>
        <result property="noticeWrtr" column="notice_wrtr"/>
        <result property="noticeAnsYn" column="notice_ans_yn"/>
        <result property="noticeCat" column="notice_cat"/>
        <result property="noticeTitle" column="notice_title"/>
        <result property="atchFileId" column="atch_file_id"/>
        <result property="noticeTopFixed" column="notice_top_fixed"/>
        <result property="parentId" column="patent_id"/>
    </resultMap>

    <!-- 게시글 상세페이지 -->
    <resultMap id="UserNoticeDetail" type="smartbeans.portal.user.notice.service.UserNoticeVO">
        <result property="noticeBoardNo" column="notice_board_no"/>
        <result property="noticeBoardSubType" column="notice_board_sub_type"/>
        <result property="noticeLastUpdtDtm" column="notice_last_updt_dtm"/>
        <result property="noticeFirstRegistDtm" column="notice_first_regist_dtm"/>
        <result property="noticeViewCount" column="notice_view_count"/>
        <result property="noticeContents" column="notice_contents"/>
        <result property="noticeWrtr" column="notice_wrtr"/>
        <result property="noticePrvtPstYn" column="notice_prvt_pst_yn"/>
        <result property="noticePassword" column="notice_password"/>
        <result property="noticeAnsYn" column="notice_ans_yn"/>
        <result property="noticeDelYn" column="notice_del_yn"/>
        <result property="mbrId" column="mbr_id"/>
        <result property="noticeCat" column="notice_cat"/>
        <result property="noticeTitle" column="notice_title"/>
        <result property="atchFileId" column="atch_file_id"/>
        <result property="parentId" column="patent_id"/>
    </resultMap>

    <resultMap id="UserCmntList" type="smartbeans.portal.user.notice.service.UserNoticeVO">
        <result property="noticeBoardNo" column="notice_board_no"/>
        <result property="cmntNo" column="cmnt_no"/>
        <result property="cmntCn" column="cmnt_cn"/>
        <result property="cmntFirstRegistDtm" column="cmnt_first_regist_dtm"/>
        <result property="cmntParentNo" column="cmnt_parent_no"/>
        <result property="mbrId" column="mbr_id"/>
        <result property="noticeBoardNo" column="notice_board_no"/>
        <result property="cmntSt" column="cmnt_st"/>
        <result property="cmntDepth" column="cmnt_depth"/>
        <result property="cmntOrder" column="cmnt_order"/>
    </resultMap>

    <select id="selectAll" resultMap="UserNoticeList">
        SELECT *
        FROM tb_notice_board
    </select>

    <select id="selectAllcmnt" resultMap="UserCmntList">
        SELECT *
        FROM tb_cmnt;
    </select>

    <!-- 목록 출력 -->
    <select id="selectUserBoardList" parameterType="NoticeBoardVO" resultMap="UserNoticeList">
        select
        row_number() over (order by notice_board_no) as rownum,
        notice_board_no,
        notice_board_sub_type,
        notice_title,
        notice_first_regist_dtm,
        notice_ans_yn,
        notice_wrtr,
        notice_view_count,
        notice_cat,
        notice_top_fixed
        from
        tb_notice_board
        where notice_del_yn = 'N'
        and notice_board_sub_type = #{noticeBoardSubType}
        <choose>
            <when test='searchCondition =="0"'>
                and notice_title like '%'||#{searchKeyword}||'%'
            </when>
            <when test='searchCondition == "1"'>
                and notice_contents like '%'||#{searchKeyword}||'%'
            </when>
            <when test='searchCondition == "2"'>
                and notice_wrtr like '%'||#{searchKeyword}||'%'
            </when>
            <otherwise>
                <!-- 아무 조건도 없이 전체 목록을 출력 -->
            </otherwise>
        </choose>

        order by
        notice_board_no DESC
        limit CAST(#{recordCountPerPage} AS INTEGER) offset CAST(#{firstIndex} AS INTEGER)

    </select>

    <select id="selectUserBoardListTotCnt" parameterType="NoticeBoardVO" resultType="java.lang.Integer">

        select
        count(notice_board_sub_type)
        from
        tb_notice_board
        where notice_del_yn = 'N'
        and notice_board_sub_type = #{noticeBoardSubType}
        <choose>
            <when test='searchCondition =="0"'>
                and notice_title like '%'||#{searchKeyword}||'%'
            </when>
            <when test='searchCondition == "1"'>
                and notice_contents like '%'||#{searchKeyword}||'%'
            </when>
            <when test='searchCondition == "2"'>
                and notice_wrtr like '%'||#{searchKeyword}||'%'
            </when>
            <otherwise>
                <!-- 아무 조건도 없이 전체 목록을 출력 -->
            </otherwise>
        </choose>


    </select>

    <select id="selectUserBoardDetail" parameterType="NoticeBoardVO" resultMap="UserNoticeDetail">
        SELECT
            row_number() over (order by notice_board_no) as rownum,
            notice_board_no,
            notice_board_sub_type,
            notice_title,
            notice_contents,
            notice_wrtr,
            notice_first_regist_dtm,
            notice_last_updt_dtm,
            notice_prvt_pst_yn,
            notice_password,
            notice_ans_yn,
            notice_view_count,
            notice_del_yn,
            mbr_id,
            notice_cat,
            atch_file_id
        FROM
            tb_notice_board
        WHERE
            notice_board_no = #{noticeBoardNo}
    </select>

    <select id="selectCmntList" parameterType="NoticeBoardVO" resultMap="UserCmntList">
        SELECT
            cmnt_no,
            cmnt_cn,
            cmnt_first_regist_dtm,
            cmnt_parent_no,
            mbr_id,
            notice_board_no,
            cmnt_st,
            cmnt_depth,
            cmnt_order
        FROM
            tb_cmnt
        WHERE
            notice_board_no = #{noticeBoardNo}
    </select>

    <insert id="userinsertBoard" parameterType="NoticeBoardVO">
        INSERT INTO tb_notice_board (
            notice_board_sub_type,
            notice_last_updt_dtm,
            notice_first_regist_dtm,
            notice_contents,
            notice_wrtr,
            notice_password,
            mbr_id,
            notice_cat,
            notice_title,
            atch_file_id
        ) VALUES (
                     #{noticeBoardSubType},
                     TO_TIMESTAMP(#{noticeLastUpdtDtm}, 'YYYY-MM-DD HH24:MI:SS'),
                     TO_TIMESTAMP(#{noticeFirstRegistDtm}, 'YYYY-MM-DD HH24:MI:SS'),
                     #{noticeContents},
                     #{noticeWrtr},
                     #{noticePassword},
                     #{mbrId},
                     #{noticeCat},
                     #{noticeTitle},
                     #{atchFileId}
                 )
    </insert>

    <insert id="userinsertComment" parameterType="NoticeBoardVO">
        INSERT INTO tb_cmnt (
            cmnt_cn,
            cmnt_first_regist_dtm,
            cmnt_parent_no,
            mbr_id,
            notice_board_no,
            cmnt_st,
            cmnt_depth,
            cmnt_order
        ) VALUES (
                  #{cmntCn},
                  TO_TIMESTAMP(#{cmntFirstRegistDtm}, 'YYYY-MM-DD HH24:MI:SS'),
                  #{cmntParentNo},
                  CAST(#{mbrId} AS bigint),
                  #{noticeBoardNo},
                  #{cmntSt},
                  #{cmntDepth},
                  #{cmntOrder}
                )
    </insert>


</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="chungnam.portal.sm.mapper.SurvayMapper">


    <resultMap id="Survaymenu" type="chungnam.portal.sm.vo.SurvayVO">
        <result property="sn" column="SN"/>
        <result property="comment" column="COMMENT"/>
        <result property="create_id" column="CREATE_ID"/>
        <result property="menu_id" column="MENU_ID"/>
        <result property="stft" column="STFT"/>
        <result property="reg_data" column="REG_DATA"/>
    </resultMap>


    <select id="SelectSmList" parameterType="chungnam.portal.sm.vo.SurvayVO" resultMap="Survaymenu">
        select SN ,COMMENT ,CREATE_ID ,MENU_ID ,STFT ,REG_DATA  from stft 
	</select>

     <select id="SelectListCnt" parameterType="chungnam.portal.sm.vo.SurvayVO" resultType="int">
        SELECT COUNT(*) totcnt
			FROM stft
			WHERE 1=1
			<if test="searchKeyword != null and searchKeyword != ''">
		        <choose>
		            <when test="searchCondition == 0">
						AND ID LIKE '%' || #{searchKeyword} || '%'
					</when>
		            <when test="searchCondition == 1">
						AND	NAME LIKE '%' || #{searchKeyword} || '%'
					</when>
				</choose>
			</if>
	</select>
</mapper>